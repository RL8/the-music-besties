{
  "framework": "nuxtjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".output/public",
  "routes": [
    {
      "src": "/_nuxt/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NUXT_PUBLIC_API_BASE_URL": "https://mb-api-service-production.up.railway.app/api",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}"
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true
  }
}
